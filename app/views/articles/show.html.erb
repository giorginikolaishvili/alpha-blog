<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
<ul class="listing">
  <div class="row">
  <h3 align="center">Author : </h3>
    <div align="center" class="col-md-4 col-md-offset-4">
        <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user)%>
        </li>
        <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
    </div>
  </div>
</ul>
  <h3 align="center">Description: </h3>
  <hr>
  <%= simple_format(@article.description) %>
  <%if logged_in? && current_user==@article.user%>
  <div class="row">
    <div class="col-ms-6">
      <%= link_to "Edit this articlse", edit_article_path(@article), class:"btn btn-primary" %>
      <%= link_to "Delete this article", article_path(@article), method: :delete, class: "btn btn-danger", data: {confirm: "are you sure ? "} %>
    </div>
  </div>
  <%end%>
  <%= link_to "Back to articles", articles_path %>
</div>